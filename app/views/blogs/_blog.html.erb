<li id="blog-<%= blog.id %>">
  <%= link_to user_gravatar(blog.user, size: 50), blog.user %>
  <span class="user">
    <%= link_to blog.user.name, blog.user %>
  </span>
  <span class="content">    
    <%= link_to blog.title, blog_post_path(:username => url_encoding(blog.user.name), :title => url_encoding(blog.title), :id => blog.id) %>    
    <%= image_tag blog.display_image if blog.image.attached? %>
    
  </span>
  
  <span class="timestamp">
    Posted <%= time_ago_in_words(blog.created_at) %> ago.
    <% if current_user?(blog.user) %>
      <%= link_to "Delete", blog, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>