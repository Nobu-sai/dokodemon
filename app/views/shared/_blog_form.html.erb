<%= form_with model: @blog, local: false, id: "blog_form" do |f| %>
  <%= render 'shared/error_messages', object: f.object %> 

  <div class="title-input">
    <%= f.text_field :title, id: "blog_form_title", placeholder: "What is the title of post...?" %>
  </div>
  <div class="field">
    <%= f.text_area :text, id: "blog_form_text", placeholder: "What do you want to write...?" %>
  </div>
  <%= f.submit "Post!", class: "btn btn-primary", id: "blog_form_btn" %>
  <span class="image">
    <%= f.file_field :image, id: "blog_form_file", accept: "image/jpeg,image/gif,image/png" %>
  </span>

  <script type="text/javascript">
  $("#blog_image").bind("change", function() {
    const size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert("Maximum file size is 5MB. Please choose a smaller file.");
      $("#blog_image").val("");
    }
  });
  </script>
<% end %>